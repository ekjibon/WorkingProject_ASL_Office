              $scope.Delete = function (taskInfo) {
                  swal({
                      title: "Are you sure?",
                      text: "Once deleted, you will not be able to recover this data!",
                      icon: "warning",
                      buttons: true,
                      dangerMode: true,
                  })
                    .then((willDelete) => {
                        if (willDelete) {
                            $http.post(baseUrl + 'Task/DeleteTask', taskInfo).

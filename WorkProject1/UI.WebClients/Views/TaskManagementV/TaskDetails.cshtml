                                        }
                                        else if (taskInfo.Status == "Paused")
                                        {
                                            <td style="font-size:15px;" class="p-0"><p class="label label-warning" style="font-style: italic;font-size: medium;padding-left: 21%;padding-right: 21%;color: white;">@taskInfo.Status</p></td>
                                        }
                                        else if (taskInfo.Status == "Resolved")

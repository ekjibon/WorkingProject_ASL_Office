                                                       ng-click="SaveAttendance(item1.Day,$event.target,item1.Day)" ng-checked="item1.IsPresent"
                                                       ng-hide="item1.IsDisable==true || item1.IsLeave==true" ng-disabled="item1.IsDisableDate"

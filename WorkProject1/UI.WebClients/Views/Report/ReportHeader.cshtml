@{
    ViewBag.Title = "ReportHeader";
}
@model OEMS.Models.Model.ReportHeader
@{
    ViewBag.Title = "Report Header Image";
    var LegalLandscape = "";
    var LegalPortrait = "";
    var A4Landscape = "";
    var A4Portrait = "";
    if (Model.LegalLandscape != null)
    {
        var LegalLandscapebase64 = Convert.ToBase64String(Model.LegalLandscape);
        LegalLandscape = String.Format("data:image/gif;base64,{0}", LegalLandscapebase64);
    }
    if (Model.LegalPortrait != null)
    {
        var LegalPortraitbase64 = Convert.ToBase64String(Model.LegalPortrait);
        LegalPortrait = String.Format("data:image/gif;base64,{0}", LegalPortraitbase64);
    }
    if (Model.A4Landscape != null)
    {
        var A4Landscapebase64 = Convert.ToBase64String(Model.A4Landscape);
        A4Landscape = String.Format("data:image/gif;base64,{0}", A4Landscapebase64);
    }
    if (Model.A4Portrait != null)
    {
        var A4Portraitbase64 = Convert.ToBase64String(Model.A4Portrait);
        A4Portrait = String.Format("data:image/gif;base64,{0}", A4Portraitbase64);
    }
}
@section Styles{
    <link href="~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css" />
}
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="icon-settings font-green"></i>
                <span class="caption-subject font-green sbold uppercase">@ViewBag.Title</span>
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form enctype="multipart/form-data" action="@Url.Action("ReportHeader")" method="post">
                <div class="form-body row">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group" style="text-align:center">
                                <label class="control-label sbold">
                                    CGSD Primary
                                </label>
                                <div class="">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="@LegalLandscape" width="200" height="150" alt="" />
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail"  width="200" height="150" style="width: 200px; height: 150px;"> </div>
                                        <div>
                                            <span class="btn btn-file btn-primary">
                                                <span class="fileinput-new "> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                <input type="file" name="LegalLandscapeImg" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|images/*">
                                            </span>
                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group" style="text-align:center">
                                <label class="control-label sbold">
                                    CGSD Secondary
                                </label>
                                <div class="">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="@LegalPortrait" width="200" height="150" alt="" />
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail"  width="200" height="150" style="width: 200px; height: 150px;"> </div>
                                        <div>
                                            <span class="btn btn-primary btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                <input type="file" name="LegalPortraitImg" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|images/*">
                                            </span>
                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:20px">
                        <div class="col-md-6">
                            <div class="form-group" style="text-align:center">
                                <label class="control-label sbold">
                                    A4 Landscape 
                                </label>
                                <div class="">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="@A4Landscape" width="200" height="150" alt="" />
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail"  width="200" height="150" style="width: 200px; height: 150px;"> </div>
                                        <div>
                                            <span class="btn btn-primary btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                <input type="file" name="A4LandscapeImg" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|images/*">
                                            </span>
                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group" style="text-align:center">
                                <label class="control-label sbold">
                                    A4 Portrait
                                </label>
                                <div class="">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="@A4Portrait" width="200" height="150" alt="" />
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" width="200" height="150" style="width: 200px; height: 150px;"> </div>
                                        <div>
                                            <span class="btn btn-primary btn-file">
                                                <span class="fileinput-new"> Select image </span>
                                                <span class="fileinput-exists"> Change </span>
                                                <input type="file" name="A4PortraitImg" accept=".jpg, .png, .jpeg, .gif, .bmp, .tif, .tiff|images/*">
                                            </span>
                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                    <div class="col-md-12 note" > 
                        <div class="col-md-12 text-center" style="text-align:center">
                            <div class="form-group" style="text-align:center">
                                <button type="submit" class="btn btn-sm btn-success " style="width:200px;"> Update</button>
                                </div>
                            </div> 
                    </div>
                </div>
            </form>
            </div>
    </div>
@section Scripts{
    <script src="~/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js" type="text/javascript"></script>
}

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="//cdn.odhyyon.com/studentportal/js/custom.js"></script>
    <script src="//cdn.odhyyon.com/admin/assets/global/plugins/jquery.blockui.min.js" ," type="text/javascript"></script>
   

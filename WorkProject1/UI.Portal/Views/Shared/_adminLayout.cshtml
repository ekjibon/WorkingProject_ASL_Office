    <style>
        .required {
            color: red;
        }

        .profil-student {
            position: relative;
        }

            .profil-student::before {
                position: absolute;
                content: '';
                width: 3px;
                height: 375px;
                top: 238px;
                left: 153px;
                /*background-image: url('../../assets/global/img/profil_line.png');*/
            }

        .btnColor {
            background-color: #009db8;
            color: white;
            font-family: inherit;
        }

        button.confirm.btn.btn-lg.btn-primary {
            background: red;
            border: none;
        }

        .btn.focus, .btn:focus {
            outline: 0;
            box-shadow: none;
        }

        .btn-primary.focus, .btn-primary:focus {
            box-shadow: none;
        }

        .pull-right i {
            /* position: absolute; */
            top: 7px;
            left: 12px;
            font-size: 15px;
        }

        .CusomActive {
            color: #9A9A9A !important;
            background: #fff;
            box-shadow: -9px -1px 12px 0px rgba(0, 0, 0, 0.5);
            border-left: 5px solid #009DB8;
        }
        .delete{
                font-size: 25px;
                color: red;
        }
        .sch h4 {
    color: blue;
    font-size: 22px;

    font-family: Calibri;
}
    </style>
</head>
<body id="page-top">

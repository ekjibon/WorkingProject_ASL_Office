    <script src="//cdn.odhyyon.com/admin/assets/global/plugins/bootstrap-sweetalert/sweetalert.min.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/ANGULAR")
    <script src="//cdn.odhyyon.com/admin/assets/angular/lib/ui-bootstrap-tpls-2.5.0.min.js" ," type="text/javascript"></script>
    <script src="//cdn.odhyyon.com/admin/assets/angular/lib/dirPagination.js" ," type="text/javascript"></script>
    <script src="//cdn.odhyyon.com/admin/assets/angular/lib/angular-block-ui.js" ," type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-filter/0.5.17/angular-filter.min.js"></script>
    <script src="~/assets/angular/lib/uiBootstrap.js"></script>
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {

            var CurrentUrl = window.location.href;

            if (CurrentUrl.contains("/Student/MyProfile")) {

                jQuery('#MyProfile').addClass('CusomActive');
            }
            else if (CurrentUrl.contains("/Attendance/Attendance")) {

                jQuery('#Attendance').addClass('CusomActive');
            }
            else if (CurrentUrl.contains("/Attendance/Leave")) {

                jQuery('#Leave').addClass('CusomActive');
            }
            else if (CurrentUrl.contains("/Fees/Fees")) {

                jQuery('#Fees').addClass('CusomActive');
            }
            else if (CurrentUrl.contains("/Result/ResultView")) {   

                jQuery('#Results').addClass('CusomActive');
            }
            else if (CurrentUrl.contains("/Notice/NoticeBoard")) {

                jQuery('#NoticeBorad').addClass('CusomActive');
            } else if (CurrentUrl.contains("/Notice/Request")) {

                jQuery('#Request').addClass('CusomActive');
            } else if (CurrentUrl.contains("/Notice/ParentsMeeting")) {

                jQuery('#ParentsMeeting').addClass('CusomActive');
            }
            else if (CurrentUrl.contains("/Notice/Homework")) {
                jQuery('#Homework').addClass('CusomActive');
            }
            else if (CurrentUrl.contains("/Home/CS")) {
                jQuery('#CS').addClass('CusomActive');
            }
            else if (CurrentUrl.contains("/Notice/Newsletter")) {
                jQuery('#Newsletter').addClass('CusomActive');
            } else if (CurrentUrl.contains("/ECA/ECAList")) {

                jQuery('#ECA').addClass('CusomActive');
            } else if (CurrentUrl.contains("/ECA/AddECA")) {

                jQuery('#ECA').addClass('CusomActive');
            }
            else {

                jQuery('#Dashboard').addClass('CusomActive');
            }
        });

    </script>
</body>

</html>

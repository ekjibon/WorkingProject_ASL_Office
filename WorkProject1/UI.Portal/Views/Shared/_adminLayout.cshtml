            </li>
            @*<li class="nav-item " id="Leave">
                <a class="nav-link " href="@Url.Action("Leave", "Attendance")" data-toggle="tooltip" title="Leave">
                    <i class="fab fa-staylinked"></i>
                    <span>Leave</span>
                </a>
            </li>*@
